{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "esnext.asynciterable", "esnext.bigint"],
    "allowJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "strict": false,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false
  }
}
